{
    "bot": {
        "name": "WhatsApp Bot",
        "version": "1.0.0",
        "creator": "MatDev",
        "startTime": null,
        "environment": "production"
    },
    "session": {
        "path": "data/session",
        "timeout": 30000,
        "maxAge": 604800000,
        "autoCleanup": true
    },
    "connection": {
        "retryAttempts": 5,
        "retryDelay": 3000,
        "timeout": 60000,
        "keepAlive": 10000
    },
    "features": {
        "autoLoad": true,
        "enabledByDefault": false,
        "configPath": "config/features.json"
    },
    "logging": {
        "level": "info",
        "fileLogging": true,
        "maxFileSize": 10485760,
        "maxFiles": 5,
        "logDirectory": "data/logs"
    },
    "security": {
        "rateLimit": {
            "enabled": true,
            "maxRequests": 100,
            "windowMs": 60000
        },
        "allowedChats": [],
        "blockedChats": []
    },
    "performance": {
        "monitoring": true,
        "metricsInterval": 30000,
        "gcEnabled": false
    }
}
