{
    "enabled": true,
    "settings": {
        "globalEnabled": false,
        "groups": false,
        "chats": false,
        "reactions": ["❤️", "👍", "😂", "😍", "🔥"],
        "probability": 0.3,
        "cooldownTime": 5000,
        "maxHistorySize": 1000
    },
    "storage": {
        "dataFile": "autoReact.json",
        "retention": "7d",
        "autoCleanup": true,
        "cleanupInterval": "10m"
    },
    "permissions": {
        "toggle": ["owner"],
        "config": ["owner"],
        "stats": ["owner"]
    },
    "metadata": {
        "version": "1.0.0",
        "description": "Auto-react system with configurable reactions",
        "author": "MatDev",
        "dependencies": []
    }
}
