{
    "enabled": true,
    "settings": {
        "globalEnabled": false,
        "groups": false,
        "chats": false,
        "target": "auto",
        "autoSave": true,
        "notifyCapture": true,
        "maxFileSize": 104857600,
        "supportedTypes": ["image", "video", "audio", "voice"]
    },
    "storage": {
        "dataFile": "antiViewOnce.json",
        "retention": "PERMANENT",
        "autoCleanup": false,
        "mediaPath": "data/viewonce"
    },
    "permissions": {
        "toggle": ["owner"],
        "config": ["owner"],
        "list": ["owner"],
        "download": ["owner"]
    },
    "metadata": {
        "version": "1.0.0",
        "description": "Anti-ViewOnce capture with permanent storage",
        "author": "MatDev",
        "dependencies": ["messageCache"]
    }
}
